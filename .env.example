# ===========================================
# Media Scraper API - Environment Configuration
# ===========================================

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Redis (required for BullMQ job queue)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Security
API_KEY_ENABLED=false
API_KEYS=key1,key2,key3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Temp Storage
TEMP_DIR=./tmp
MAX_FILE_SIZE_MB=2048
CLEANUP_INTERVAL_MS=3600000

# yt-dlp
YTDLP_PATH=yt-dlp
YTDLP_COOKIES_FILE=
YTDLP_PROXY=

# Puppeteer
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_EXECUTABLE_PATH=

# Upload Providers (optional API keys for higher limits)
GOFILE_API_KEY=
PIXELDRAIN_API_KEY=
FILEIO_EXPIRY=14d
CATBOX_USERHASH=
TRANSFERSH_URL=https://transfer.sh
TRANSFERSH_MAX_DAYS=14

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Concurrency
MAX_CONCURRENT_JOBS=3
MAX_CONCURRENT_UPLOADS=2
MAX_CONCURRENT_DOWNLOADS=2
